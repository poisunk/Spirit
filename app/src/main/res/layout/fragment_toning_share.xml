<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <com.example.spirit.widget.MyShadeView
        android:id="@+id/fragment_toning_share_shade_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:shape="rect"/>

    <Button
        android:id="@+id/fragment_toning_share_back_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/item_back_cricle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/fragment_toning_share_collection"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/menu_collection"
        android:backgroundTint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="60sp"/>

    <Button
        android:id="@+id/fragment_toning_share_share"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/item_share"
        android:backgroundTint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="60sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>